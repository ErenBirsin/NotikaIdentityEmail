@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<style>
    /* ... (Mevcut stil kodunuz buraya gelecek, değişiklik yok) ... */
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        margin-bottom: 20px;
        background-color: #fff;
    }

    .card-header {
        background-color: #f8f9fa;
        padding: 15px 20px;
        border-bottom: 1px solid #e9ecef;
        font-weight: bold;
        color: #343a40;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .card-body {
        padding: 20px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0,0,0,.02);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,.075);
    }

    .status-badge {
        padding: .25em .4em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .25rem;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

    .status-active {
        color: #fff;
        background-color: #28a745;
    }

    .status-inactive {
        color: #fff;
        background-color: #dc3545;
    }

    .search-input {
        width: 100%;
        padding: 8px 12px;
        margin-bottom: 15px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .pagination {
        display: flex;
        padding-left: 0;
        list-style: none;
        border-radius: .25rem;
    }

    .page-item {
        margin: 0 2px;
    }

    .page-link {
        position: relative;
        display: block;
        padding: .5rem .75rem;
        margin-left: -1px;
        line-height: 1.25;
        color: #007bff;
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: .25rem;
        text-decoration: none;
    }

        .page-link:hover {
            color: #0056b3;
            background-color: #e9ecef;
            border-color: #dee2e6;
        }

    .page-item.active .page-link {
        z-index: 3;
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }
</style>


<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">Kullanıcı Listesi</h2>
                        <p class="mb-0 text-muted">Sistemdeki kayıtlı tüm kullanıcıların listesi ve detayları.</p>
                    </div>

                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <input type="text" class="search-input" placeholder="Kullanıcı ara..." aria-label="Kullanıcı ara">
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="/Admin/User/Add" class="btn btn-primary"><i class="fa fa-user-plus"></i> Yeni Kullanıcı Ekle</a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th style="width: 50px;">#</th>
                                        <th>Ad-Soyad</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>E-posta</th>
                                        <th class="text-center">Durum</th>
                                        <th class="text-center" style="width: 150px;">İşlemler</th> @* İşlemler sütunu genişliği azaltıldı *@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th>@count</th>
                                            <td>@item.Name @item.SurName</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td class="text-center">
                                                @if (item.IsActive)
                                                {
                                                    <span class="status-badge status-active">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge status-inactive">Pasif</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                
                                                @if (item.IsActive)
                                                {
                                                    <a href="/User/DeActiveUserCount/@item.Id" class="btn btn-sm btn-warning" title="Pasife Çevir" onclick="return confirm('@item.UserName adlı kullanıcıyı pasife çevirmek istediğinizden emin misiniz?');">
                                                        <i class="fa fa-toggle-off"></i> Pasif Yap
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="/User/ActivateUserCount/@item.Id" class="btn btn-sm btn-success" title="Aktife Çevir" onclick="return confirm('@item.UserName adlı kullanıcıyı aktife çevirmek istediğinizden emin misiniz?');">
                                                        <i class="fa fa-toggle-on"></i> Aktif Yap
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center mt-3">
                                <li class="page-item disabled"><a class="page-link" href="#">Önceki</a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Sonraki</a></li>
                            </ul>
                        </nav>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>