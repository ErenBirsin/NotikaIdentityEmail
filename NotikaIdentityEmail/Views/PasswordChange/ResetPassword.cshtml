@model ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Şifre Yenileme";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Şifre Yenileme</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .card {
            max-width: 450px;
            width: 90%;
            padding: 2.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            border-radius: 0.75rem;
            background-color: #fff;
            text-align: center;
        }

        .card-title {
            margin-bottom: 2rem;
            color: #343a40;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }

        .form-control {
            border-radius: 0.375rem;
            padding: 0.75rem 1rem;
            font-size: 1rem;
        }

        .btn-success {
            width: 100%;
            padding: 0.75rem;
            font-size: 1.1rem;
            border-radius: 0.375rem;
            margin-top: 1rem;
        }

        .text-danger {
            margin-top: 0.25rem;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>

    <div class="card">
        <h2 class="card-title">Yeni Şifrenizi Belirleyin</h2>
        <form method="post">


            <div class="form-group">
                <label for="Password">Yeni Şifreniz:</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="En az 6 karakter" autofocus />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ConfirmPassword">Yeni Şifrenizi Tekrar Girin:</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Şifrenizi tekrar girin" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Şifreyi Güncelle</button>
        </form>

        <div class="mt-3">
            <a href="#" class="text-secondary">Giriş Yapmaya Geri Dön</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>